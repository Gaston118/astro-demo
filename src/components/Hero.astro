---
import { basics } from "../../cv.json"
import Section from "../components/Section.astro"
import Mail from "../icons/Mail.astro"
import Phone from "../icons/Phone.astro"
import LinkedIn from "../icons/LinkedIn.astro"
import GitHub from "../icons/GitHub.astro"
import World from "../icons/World.astro"

const {name, label, location, profiles, email, phone} = basics
const {city, region} = location

const SOCIAL_ICON : Record<string, any> = {
    linkedin: LinkedIn,
    github: GitHub
}

const linkinfo = profiles.find(({network}) => network.toLowerCase() === 'linkedin')
const linkurl = linkinfo?.url 

const gitinfo = profiles.find(({network}) => network.toLowerCase() === 'github')
const giturl = gitinfo?.url
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <World/>
                {city}, {region}
            </span>
            <footer>
                <div class="print">
                    {email} | {phone} | {giturl} | {linkurl}
                </div>
                {
                    email && (
                    <a 
                    href={`mailto:${email}`}
                    title="Send me an email!"
                    target="_blank"
                    rel="noopener noreferrer"
                    >
                    <Mail/>
                    </a>
                )}
                 {
                    phone && (
                    <a 
                    href={`tel:${phone}`}
                    title="Call me!"
                    target="_blank"
                    rel="noopener noreferrer"
                    >
                    <Phone/>
                    </a>
                )}

                {
                    profiles.map(({ network, url, username }) => {
                       const Icon = SOCIAL_ICON[network.toLowerCase()] 
                          return (
                            <a 
                            href={url}
                            title={network}
                            target="_blank"
                            rel="noopener noreferrer"
                            >
                            <Icon/>
                            </a>
                          )
                    })
                }
                <a href="../../CapdevilaGastÃ³n-Resume-EN.pdf" title="Download Resume" download>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M3 14L3.23384 14.6626C4.144 17.2413 4.59908 18.5307 5.63742 19.2654C6.67576 20 8.0431 20 10.7778 20H13.2222C15.9569 20 17.3242 20 18.3626 19.2654C19.4009 18.5307 19.856 17.2413 20.7662 14.6626L21 14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                    <path d="M12 14V4M12 14C11.2998 14 9.99153 12.0057 9.5 11.5M12 14C12.7002 14 14.0085 12.0057 14.5 11.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </a>
            </footer>

        </div>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    h1{
        font-size: 2.5rem;
    }

    h2{
        color: #7f7f7f;
        font-weight: 500;
        font-size: 1rem;
        text-wrap: balance;
        font-family: ui-monospace, monospace;
        margin-bottom: 10px;
    }

    span{
        color: #666;
        display: inline-flex;
        font-size: 0.9rem;
        column-gap: 0.4rem;
        vertical-align: baseline;
        line-height: 0.9;
    }

    .info{
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    footer{
        display: flex;
        gap: 0.3rem;
        align-items: center;
        margin-top: 8px;
        margin-bottom: -30px;
    }

    footer a {
        color: #ffffff;
        background: #677e97;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    footer a:hover{
        background-color: #eee;
        color: #000000;
    }

    .print{
        display: none;
    }

    @media print {
        .print{
            display: block;
            font-size: 0.8rem;
            color: #000000;
            margin: 5px;
            padding: 15px;
        }

        footer a {
            border: none;
            padding: 0;
            margin: 0;
            height: auto;
            width: auto;
            border-radius: 0;
            color: #000000;
        }

        footer svg{
            display: none;
        }
    }

</style>
