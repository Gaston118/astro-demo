---
import { basics } from "../../cv.json"
import Section from "../components/Section.astro"
import Mail from "../icons/Mail.astro"
import Phone from "../icons/Phone.astro"
import LinkedIn from "../icons/LinkedIn.astro"
import GitHub from "../icons/GitHub.astro"
import World from "../icons/World.astro"

const {name, label, location, profiles, email, phone} = basics
const {city, region} = location

const SOCIAL_ICON : Record<string, any> = {
    linkedin: LinkedIn,
    github: GitHub
}

const linkinfo = profiles.find(({network}) => network.toLowerCase() === 'linkedin')
const linkurl = linkinfo?.url 

const gitinfo = profiles.find(({network}) => network.toLowerCase() === 'github')
const giturl = gitinfo?.url
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <World/>
                {city}, {region}
            </span>
            <footer>
                <div class="print">
                    {email} | {phone} | {giturl} | {linkurl}
                </div>
                {
                    email && (
                    <a 
                    href={`mailto:${email}`}
                    title="Email me!"
                    target="_blank"
                    rel="noopener noreferrer"
                    >
                    <Mail/>
                    </a>
                )}
                 {
                    phone && (
                    <a 
                    href={`tel:${phone}`}
                    title="Call me!"
                    target="_blank"
                    rel="noopener noreferrer"
                    >
                    <Phone/>
                    </a>
                )}

                {
                    profiles.map(({ network, url, username }) => {
                       const Icon = SOCIAL_ICON[network.toLowerCase()] 
                          return (
                            <a 
                            href={url}
                            title={network}
                            target="_blank"
                            rel="noopener noreferrer"
                            >
                            <Icon/>
                            </a>
                          )
                    })
                }
            </footer>

        </div>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    h1{
        font-size: 2.5rem;
    }

    h2{
        color: #7f7f7f;
        font-weight: 500;
        font-size: 1rem;
        text-wrap: balance;
        font-family: ui-monospace, monospace;
        margin-bottom: 10px;
    }

    span{
        color: #666;
        display: inline-flex;
        font-size: 0.9rem;
        column-gap: 0.4rem;
        vertical-align: baseline;
        line-height: 0.9;
    }

    .info{
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    footer{
        display: flex;
        gap: 0.3rem;
        align-items: center;
        margin-top: 8px;
        margin-bottom: -30px;
    }

    footer a {
        color: #ffffff;
        background: #677e97;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    footer a:hover{
        background-color: #eee;
        color: #000000;
    }

    .print{
        display: none;
    }

    @media print {
        .print{
            display: block;
            font-size: 0.8rem;
            color: #000000;
            margin: 5px;
            padding: 15px;
        }

        footer a {
            border: none;
            padding: 0;
            margin: 0;
            height: auto;
            width: auto;
            border-radius: 0;
            color: #000000;
        }
    }

</style>
