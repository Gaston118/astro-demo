---
import {languages} from "../../cv.json"
import Section from "./Section.astro"
---

<Section title="Languages">
    <ul>
        {languages.map(({language, fluency}) => (
        <li>
            <h4>{language}</h4>
            <p>{fluency}</p>
        </li>
        ))}
    </ul>
</Section>

<style>
    p{
        color: #888888;
        margin: 10px;
    }

    :global(.dark) h4{
        color: #d1d1d1;
    }

    :global(.dark) p{
        color: #b0b0b0;
    }
</style>