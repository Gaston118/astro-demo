---
import Section from "./Section.astro"

import {skills} from "../../cv.json"
---

<Section title="Skills">
    <ul>
        {
            skills.map(({name}) => (
                <li>
                    <span>{name}</span>
                </li>
            ))
        }
    </ul>
</Section>

<style>
    ul{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li{
        border-radius: 6px;
        background: #677e97;
        color: rgb(255, 255, 255);
        font-size: 0.9rem;
        font-weight: 500;
        padding: 0.2rem 0.5rem;
        transition: all 0.3s ease;
    }

    li:hover{
        background: #eee;
        color: black;
    }

    @media print{
        li{
            color: black;
        }
    }


</style>
